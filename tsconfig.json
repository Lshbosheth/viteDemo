{
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": false,
    "module": "esnext",
    "strict": true, //这样可以对`this`上的数据属性进行严格的推断，否则总是被视为any类型
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "paths": {
    "pkg": ["./packages"], 
    "@": ["./src"], 
  },
  "include": [
    "src/**/*", "src/main.d.ts" , "src/**/*.tsx", "src/**/*.vue", "pkg/**/*.ts", "pkg/**/*.d.ts", "pkg/**/*.tsx", "pkg/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}